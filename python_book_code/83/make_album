# # def make_album(singer_name,music_name):
# #     person={'name':singer_name,'music':music_name}
# #     return person
# #
# # album=make_album('singer','music')
# # print(album)
#
def make_album(singer_name,music_name,frequency=''):
    person={'name':singer_name,'music':music_name}
    if frequency:
        person['frequency']=frequency
    return person

# 



while True:
    print("\nPlease tell me something about the singer")
    print("(enter 'q' at any time to quit)")
    f_singer=input("name:")
    if f_singer=='q':
        break
    f_music = input("music:")
    if f_music=='q':
        break
    album = make_album(f_singer,f_music)
    print(album)