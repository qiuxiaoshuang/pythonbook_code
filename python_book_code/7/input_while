responses={}
flag=True
while flag:
    name=input("请输入你的姓名:\n")
    response=input("If you could visit one place in the world,where would you go?\n")
    responses[name]=response
    repeat=input("是否有其他人参与调查？\n")
    if repeat=='no':
        flag=False
for name,response in responses.items():
    print(name,response)


